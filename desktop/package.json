{
  "name": "toxichem-labsuite-desktop",
  "version": "2.0.0",
  "description": "Desktop version of ToxiChem LabSuite for biochemists and toxicologists",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "dev": "ELECTRON_IS_DEV=1 electron main.js",
    "build": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux"
  },
  "build": {
  "publish": [
    {
      "provider": "github",
      "owner": "Trytonottry",
      "repo": "toxichem-labsuite"
    }
  ],
  "keywords": [
    "chemistry",
    "toxicology",
    "biochemistry",
    "rdkit",
    "molecular-visualization"
  ],
  "author": "ToxiChem Team",
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "org.toxichem.labsuite",
    "productName": "ToxiChem LabSuite",
    "copyright": "Copyright Â© 2025 ToxiChem Team",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "../frontend/dist/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "science"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    },
    "publish": "github"
  }
}}